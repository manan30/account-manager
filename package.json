{
  "name": "account-manager",
  "version": "1.0.0",
  "description": "Account manager is Manan Joshi's personal finance manager app.",
  "main": "index.js",
  "author": "Manan Joshi",
  "license": "MIT",
  "scripts": {
    "dev": "TAILWIND_MODE=watch vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,css}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css}'",
    "build-functions": "cd functions && npm run build",
    "firebase": "npm run build-functions && firebase emulators:start --import=./firestore-data --export-on-exit",
    "deploy-functions": "cd functions && npm run deploy",
    "compile": "yarn tsc",
    "prepare": "husky install",
    "pre-commit": "yarn lint && yarn format:check"
  },
  "devDependencies": {
    "@firebase/app-types": "0.6.1",
    "@firebase/auth-types": "^0.11.0",
    "@firebase/firestore-types": "2.0.0",
    "@types/classnames": "2.2.11",
    "@types/faker": "5.1.5",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/react-query": "1.1.2",
    "@types/react-router-dom": "5.1.6",
    "@types/react-table": "7.7.9",
    "@types/victory": "^33.1.4",
    "@typescript-eslint/eslint-plugin": "4.9.0",
    "@typescript-eslint/parser": "4.9.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.2.5",
    "eslint": "7.8.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.2.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^5.2.0",
    "postcss": "^8.2.7",
    "prettier": "2.1.1",
    "tailwindcss": "^2.2.19",
    "typescript": "4.1.2",
    "vite": "^2.0.5",
    "vite-plugin-svgr": "^0.2.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@tailwindcss/forms": "^0.3.3",
    "classnames": "2.2.6",
    "faker": "5.1.0",
    "firebase": "^8.2.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-helmet": "^6.1.0",
    "react-icons": "4.1.0",
    "react-query": "3.5.5",
    "react-router-dom": "5.2.0",
    "react-table": "7.6.3",
    "redaxios": "^0.4.1",
    "victory": "^35.4.7"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
